@model IEnumerable<Product>
@{
    ViewData["Title"] = "Ürünler";
}

<div class="text-center">
    <br />
    <div class="display-6">Ürünler</div>

    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success" asp-action="Create">
            <i class="fa fa-plus"></i> Yeni Ürün Ekle
        </a>
    </div>


    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Ürün No</th>
                <th>Ürün Resmi</th>
                <th>Ürün Adı</th>
                <th>Ürün Açıklaması</th>
                <th>Ürün Fiyatı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>
                        <img src="@item.ImageUrl" style="width:50px;" />
                    </td>
                    <td>@item.ProductName</td>
                    <td>@item.ProductDescription</td>
                    <td>@item.ProductPrice.ToString("c")</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-warning" asp-action="Update" asp-route-id="@item.Id" >
                               <i class="fa fa-edit"></i>
                                Güncelle</a> 
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id" >
                               <i class="fa fa-trash"></i>
                                Sil</a>
                           @*  <a class="btn btn-info" asp-action="GetProducts" asp-route-id="@item.Id">
                                <i class="fa fa-search"></i>
                                İncele</a> *@
                        </div>
                    </td>
                </tr>
               
            }
        </tbody>
    </table>
</div>
