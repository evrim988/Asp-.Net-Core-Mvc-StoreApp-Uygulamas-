@model IEnumerable<Category>

@{
    ViewData["Title"] = "Kategoriler";
}

<div class="text-center">
    <br />
    <div class="display-6">Kategoriler</div>

    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success" asp-action="Create">
            <i class="fa fa-plus"></i> 
            Yeni Kategori Ekle</a>
    </div>


    <table class="table table-striped table-hover">
        
        <thead>
            <tr>
                <th>Kategori No</th>
                <th>Kategori Adı</th>
                <th>Kategori Açıklaması</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
           
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.CategoryName</td>
                    <td>@item.CategoryDescription</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-warning" asp-action="Update" asp-route-id="@item.Id">
                                <i class="fa fa-edit"></i>
                            Güncelle</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                                <i class="fa fa-trash"></i>
                                Sil
                            </a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>

</div>