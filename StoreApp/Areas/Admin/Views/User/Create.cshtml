@using Entities.Dtos.User
@model UserDtoForCreation
@{
    ViewData["Title"] = "Yeni Kullanıcı Oluştur";
}

<div class="text-center">
    <br />
    <div class="display-6">Yeni Kullanıcı Oluştur</div>
    <br />
</div>

<form method="post" asp-action="Create">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group my-3">
                <label asp-for="UserName">Kullanıcı Adı:</label>
                <input asp-for="UserName" class="form-control" />
            </div>
            <div class="form-group my-3">
                <label asp-for="Email">Email:</label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group my-3">
                <label asp-for="Password">Parola:</label>
                <input asp-for="Password" class="form-control" />
            </div>
            <div class="form-group my-3">
                <label asp-for="PhoneNumber">Telefon Numarası:</label>
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
            <div class="form-group my-3">
                <div class="btn-group d-flex justify-content-end">
                    <input type="submit" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-outline-primary">
                        <i class="fa fa-solid fa-arrow-left"></i>
                        Geri Dön
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="lead p-2 mt-2">
                Roller
                @foreach (var item in Model.Roles)
                {
                    <div class="form-check my-2">
                        <input type="checkbox" name="Roles" value="@item" class="form-check-input" />
                        <label class="form-check-label">@item</label>
                    </div>
                }
            </div>
        </div>
    </div>
</form>