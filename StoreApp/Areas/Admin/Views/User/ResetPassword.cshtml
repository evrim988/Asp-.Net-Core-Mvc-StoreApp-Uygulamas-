@using Entities.Dtos.User
@model ResetPasswordDto
@{
    ViewData["Title"] = "Parola Sıfırla";
}

<div class="text-center">
    <br />
    <div class="display-6">Parola Sıfırla</div>
    <br />
</div>

<div class="text-danger" asp-validation-summary="All"></div>

<form method="post" asp-action="ResetPassword">
    <input type="hidden" asp-for="UserName" />
    <div class="form-group my-3">
        <label asp-for="Password">Parola:</label>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="ConfirmPassword">Parola:</label>
        <input asp-for="ConfirmPassword" class="form-control" />
    </div>
    <div class="btn-group">
        <button type="submit" class="btn btn-primary">
            <i class="fa fa-solid fa-key"></i>
            Parolayı Sıfırla
        </button>
        <a class="btn btn-outline-primary" asp-action="Index">
            <i class="fa fa-solid fa-users"></i>
            Kullanıcılar
        </a>
    </div>
</form>