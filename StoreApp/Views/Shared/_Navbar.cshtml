
<style>
    .navbar-nav .nav-link {
        transition: color 0.3s, background-color 0.3s;
        font-size: 1rem;
        padding: 0.5rem 1rem;
    }

    .navbar-nav .nav-link:hover {
        color: #ffeb3b;
    }

    .navbar-nav .nav-link.active {
        background-color: #ffeb3b;
        color: #343a40;
        border-radius: 0.25rem;
    }

    .navbar-toggler-icon {
        color: white;
    }

    .navbar-brand {
        font-size: 1.5rem;
    }

    .shadow-sm {
        box-shadow: 0 .125rem .25rem rgba(0, 0, 0, .075);
    }
</style>

<nav class="navbar navbar-expand-lg navbar-light bg-primary shadow-sm">
    <div class="container-fluid">
        <a class="navbar-brand text-white fw-bold" href="#">StoreApp</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-between" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-link text-white" aria-current="page" asp-action="Index" asp-controller="Home">Ana Sayfa</a>
                <a class="nav-link text-white" aria-current="page" asp-action="Index" asp-controller="Product">Ürünler(@await Component.InvokeAsync("ProductSummary"))</a>
                <a class="nav-link text-white" aria-current="page" asp-action="Index" asp-controller="Category">Kategoriler</a>
                <a class="nav-link text-white" aria-current="page" asp-page="/Contact">İletişim</a>
            </div>
            <div class="navbar-nav">
                <a class="nav-link text-white d-flex align-items-center" aria-current="page" asp-area="" asp-page="/Cart">
                    <i class="fa-solid fa-cart-shopping me-1"></i>
                    Sepetim (@await Component.InvokeAsync("CartSummary"))
                </a>
                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <a class="nav-link text-white d-flex align-items-center" aria-current="page" asp-area="Admin" asp-action="Index" asp-controller="Dashboard">
                        <i class="fa-solid fa-gear me-1"></i>
                        Admin
                    </a>
                }
                <partial name="_LoginMenu" />
            </div>
        </div>
    </div>
</nav>