<div class="my-3">
    <h6 class="lead">
        <i class="fa fa-filter text-secondary">
        </i>
        Filtrele
    </h6>
</div>

<div class="my-2">
    <form method="get" asp-action="Index">
        <input type="hidden" name="categoryId" value="@(Context.Request.Query["categoryId"])" />

        <div class="form-group my-2">
            <input class="form-control" name="SearchTerm" placeholder="Ara..." />
        </div>

        <div class="form-group my-2">
            <input class="form-control" name="MinPrice" placeholder="En Düşük Fiyat..." />
        </div>

        <div class="form-group my-2">
            <input class="form-control" name="MaxPrice" placeholder="En Yüksek Fiyat..." />
        </div>

        <div class="form-group my-2">
            <button type="submit" class="btn btn-sm btn-primary">Ara</button>
        </div>

       

    </form>
</div>