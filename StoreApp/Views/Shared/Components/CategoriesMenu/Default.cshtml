@model IEnumerable<Category>

<div class="mt-3">
<h6 class="lead">
    <i class="fa fa-solid fa-bars text-secondary"></i>
    Kategoriler
</h6>
</div>

<div>
    <ul class="list-group my-4">
        @foreach (var item in Model)
        {
            <li class="list-group-item">
                <a asp-action="Index" asp-route-Id="@item.Id">
                    @item.CategoryName
                </a>
            </li>
        }
    </ul>
</div>