@model IEnumerable<Product>

@{
    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-3">@await Component.InvokeAsync("CategoriesMenu")</div>
    <div class="col-md-9">
        <div class="row my-3">
            @foreach (var item in Model.ToList())
            {

                <partial name="_ProductCard" model="@item" />


            }
        </div>
    </div>
</div>

@section Footer {
    Only For Index Footer
}

